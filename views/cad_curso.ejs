<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD Curso</title>
    <style>
      /* Estilo geral */
body {
    font-family: Arial, sans-serif;
    background-color: #f0f8ff;
    color: #333;
    margin: 0;
    padding: 20px;
}

h1, h2 {
    text-align: center;
    color: #2c3e50;
}

/* Navbar */
nav {
    background-color: #2980b9;
    padding: 10px;
    text-align: center;
}

nav a {
    color: white;
    text-decoration: none;
    padding: 14px 20px;
    display: inline-block;
}

nav a:hover {
    background-color: #1abc9c;
}

/* Formulário */
form {
    background-color: #ecf0f1;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    margin: 20px auto;
}

label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
}

input[type="text"],
input[type="number"] {
    width: calc(100% - 22px);
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #bdc3c7;
    border-radius: 3px;
}

button {
    background-color: #2980b9;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 3px;
    cursor: pointer;
}

button:hover {
    background-color: #1abc9c;
}

button[type="submit"] {
    margin-right: 10px;
}

/* Tabela */
table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
}

th, td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

th {
    background-color: #2980b9;
    color: white;
}

td button {
    background-color: #e74c3c;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 3px;
    cursor: pointer;
}

td button:hover {
    background-color: #c0392b;
}

td form {
    display: inline;
}

td form button {
    background-color: #e74c3c;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 3px;
    cursor: pointer;
}

td form button:hover {
    background-color: #c0392b;
}

    </style>
  </head>
  <body>
    <%- include('navbar')%>
    <h1>CRUD de Curso</h1>

    <!-- Formulário para adicionar ou editar disciplinas -->
    <!-- <form action="/editar_disciplina" method="POST"> -->
    <!-- <form action="/editardisciplina" method="POST"> -->
    <form action="/editar_curso" method="POST">
      
      <label for="nome_curso">Nome do Curso:</label>
      <input type="text" id="nome_curso" name="nome_curso" required />
      <br />
      <label for="nome_coordenador">Nome do coordenador:</label>
      <input type="text" id="nome_coordenador" name="nome_coordenador" required />
      <br>
      <label for="duracao">Duração:</label>
      <input type="number" id="duracao" name="duracao" required />
      <br />
      <label for="valor">Valor:</label>
      <input type="number" id="valor" name="valor" required />
      <br />
      <label for="id_Coordenador">id_Coordenador:</label>
      <input type="number" id="id_Coordenador" name="id_Coordenador" required />
      <br />
      

     
      <!-- <button type="submit">Editar Disciplina</button> -->
      <button type="submit" name="action" value="alterar">Alterar</button>
      <button type="submit" name="action" value="incluir">Incluir</button>
      <input type="hidden" id="id_Curso" name="id_Curso" />
    </form>
    <!--     <form action="/editar_curso" method="POST">
      <button type="submit">Editar Curso</button>
      <button type="submit" name="action" value="alterar">Alterar</button>
      <button type="submit" name="action" value="incluir">Incluir</button>
      <input type="hidden" id="id_disciplina" name="id_disciplina" />
    </form> -->
    <!--nome_curso, carga_horaria, descricao_disciplina -->

    <!-- Tabela para exibir as disciplinas -->
    <h2>Relação de Cursos Cadastrados</h2>
    <table border="1">
      <thead>
        <tr>
          
          <th>Nome do Curso</th>
          <th>Nome do Coordenador</th>
          <th>Duração</th>
          <th>Valor</th>
          <th>ID do Coordenador</th>
        </tr>
      </thead>
      <tbody>
        <% curso.forEach(function(curso) { %>
          <tr>
            <td><%= curso.nome_curso %></td>
            <td><%= curso.nome_coordenador %></td>
            <td><%= curso.duracao %></td>
            <td><%= curso.valor %></td>
            <td><%= curso.id_Coordenador %></td>
            <td>
              <!-- Botão para editar curso -->
              <button onclick="preencherFormulario('<%= curso.nome_curso %>','<%= curso.nome_coordenador %>', '<%= curso.duracao %>', '<%= curso.valor %>', '<%= curso.id_Curso %>','<%= curso.nome_curso %>')">
                Editar
              </button>
              <!-- Botão para excluir curso -->
              <form action="/excluir_curso/<%= curso.id_Curso %>" method="POST">
                <button type="submit">Excluir</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
      
    </table>

    <script>
      // Função para preencher os campos do formulário ao clicar em editar
      function preencherFormulario(
        nome_curso,
        nome_coordenador,
        duracao,
        valor,
        id_Curso,
        id_Coordenador,
      ) {
        document.getElementById("nome_curso").value = nome_curso;
        document.getElementById("nome_coordenador").value = nome_coordenador;
        document.getElementById("duracao").value = duracao;
        document.getElementById("valor").value = valor;
        document.getElementById("id_Curso").value = id_Curso;
        document.getElementById("id_Coordenador").value = id_Coordenador;
      }
    </script>
  </body>


